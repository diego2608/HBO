<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Producto A"
            android:id="@+id/txtvMaterialNodescargado"
            android:layout_column="18"
            android:layout_marginBottom="15dp" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5555555555555555dasdsadasdafdagasfgfdgadfgadfgfadgadfgafdgadfg"
            android:id="@+id/txtvDescripcionMaterialNoDescargado"
            android:layout_column="18"
            android:layout_alignTop="@+id/imgvMaterialNoDescargado"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imgvMaterialNoDescargado"
            android:layout_toEndOf="@+id/imgvMaterialNoDescargado"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descargar"
            android:id="@+id/btnDescargarMaterial"
            android:layout_column="18"
            android:layout_alignBottom="@+id/imgvMaterialNoDescargado"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imgvMaterialNoDescargado"
            android:layout_column="18"
            android:src="@drawable/imgmaterialdemo"
            android:layout_below="@+id/txtvMaterialNodescargado"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/imgvMaterialNoDescargado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/btnDescargarMaterial"
        android:background="@color/gris"
        android:layout_alignParentEnd="true"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gris"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>