<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.consorciohbo.app.msdvip.UI.ControlsViews.PerfilpageActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblNameViewPerfil"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/lblPerfilNameView" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgFotoPerfil"
        android:layout_below="@+id/lblNameViewPerfil"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nº Colegio Médico"
        android:id="@+id/lblNColegiMedico"
        android:layout_below="@+id/imgFotoPerfil"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="123456"
        android:id="@+id/lblCMPNum"
        android:layout_below="@+id/lblNColegiMedico"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|normal"
        android:textColor="#08918B"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nombre:"
        android:id="@+id/textView"
        android:layout_below="@+id/lblCMPNum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#08918B"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Apellidos:"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#08918B"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtApellidoFormulario"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/lblNColegiMedico"
        android:layout_alignStart="@+id/lblNColegiMedico" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Especialidad:"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#08918B"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEspecialidadFormulario"
        android:layout_below="@+id/txtApellidoFormulario"
        android:layout_alignRight="@+id/txtApellidoFormulario"
        android:layout_alignEnd="@+id/txtApellidoFormulario"
        android:layout_alignLeft="@+id/txtApellidoFormulario"
        android:layout_alignStart="@+id/txtApellidoFormulario"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/txtPasswordFormulario"
        android:layout_below="@+id/txtEspecialidadFormulario"
        android:layout_alignRight="@+id/txtEspecialidadFormulario"
        android:layout_alignEnd="@+id/txtEspecialidadFormulario"
        android:layout_alignLeft="@+id/txtEspecialidadFormulario"
        android:layout_alignStart="@+id/txtEspecialidadFormulario"
        android:maxLength="8"
        android:hint="Escriba su contraseña"
        android:textSize="13sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Contraseña"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/txtPasswordFormulario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#08918B"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Celular:"
        android:id="@+id/textView9"
        android:layout_below="@+id/txtPasswordFormulario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#08918B"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtCelularFormulario"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/txtPasswordFormulario"
        android:layout_alignStart="@+id/txtPasswordFormulario"
        android:layout_alignRight="@+id/txtPasswordFormulario"
        android:layout_alignEnd="@+id/txtPasswordFormulario" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Correo:"
        android:id="@+id/textView10"
        android:layout_below="@+id/txtCelularFormulario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="#08918B" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtCorreoFormulario"
        android:layout_below="@+id/txtCelularFormulario"
        android:layout_alignLeft="@+id/txtCelularFormulario"
        android:layout_alignStart="@+id/txtCelularFormulario"
        android:layout_alignRight="@+id/txtCelularFormulario"
        android:layout_alignEnd="@+id/txtCelularFormulario" />


    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtNombreFormulario"
        android:layout_above="@+id/txtApellidoFormulario"
        android:layout_alignLeft="@+id/txtApellidoFormulario"
        android:layout_alignStart="@+id/txtApellidoFormulario"
        android:layout_alignRight="@+id/txtApellidoFormulario"
        android:layout_alignEnd="@+id/txtApellidoFormulario" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BtnFormularioValidar"
        android:id="@+id/btnValidarFormulario"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#55B3AF"
        android:textSize="25sp"
        android:gravity="center|fill_horizontal|center_vertical|center_horizontal|fill_vertical"
        android:background="@drawable/buttonvalidarcrearcuenta"
        android:paddingLeft="25dp" />


</RelativeLayout>
