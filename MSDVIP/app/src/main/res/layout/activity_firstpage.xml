<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".SplashScreenActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/fondomedico"
        android:scaleType="fitStart"
        android:focusableInTouchMode="false"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Grandes Beneficios"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="en un solo lugar"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginRight="10dp"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btnLoginFirst"

        android:text="@string/btnFirstLogin"
        android:textColor="#FFFFFF"
        android:textSize="25sp"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshapelogin"
        android:layout_marginTop="172dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnSignUpFirst"

        android:text="@string/btnFirstSignUP"
        android:textColor="#FFFFFF"
        android:textSize="22sp"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshapesingup"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/btnLoginFirst"
        android:layout_alignLeft="@+id/btnLoginFirst"
        android:layout_alignStart="@+id/btnLoginFirst" />

</RelativeLayout>