<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.consorciohbo.app.msdvip.UI.ControlsViews.CrearUserActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblNameViewPerfilCreate"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/lblCrearCuenta"
        android:layout_marginBottom="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgFotoPerfilCrear"
        android:src="@drawable/imgperfilseleccionado"
        android:layout_below="@+id/lblNameViewPerfilCreate"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nº Colegio Médico"
        android:id="@+id/lblNColegiMedicoCrear"
        android:textStyle="bold|normal"
        android:layout_below="@+id/imgFotoPerfilCrear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="123456"
        android:id="@+id/lblCMPNumCrear"
        android:textStyle="bold|normal"
        android:textColor="#08918B"
        android:layout_below="@+id/lblNColegiMedicoCrear"
        android:layout_alignLeft="@+id/imgFotoPerfilCrear"
        android:layout_alignStart="@+id/imgFotoPerfilCrear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nombre:"
        android:id="@+id/textView"
        android:layout_below="@+id/lblCMPNumCrear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#08918B"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Apellidos:"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#08918B"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtApellidoFrmCrear"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/lblNColegiMedicoCrear"
        android:layout_alignStart="@+id/lblNColegiMedicoCrear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Especialidad:"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#08918B"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEspecialidadFrmCrear"
        android:layout_below="@+id/txtApellidoFrmCrear"
        android:layout_alignRight="@+id/txtApellidoFrmCrear"
        android:layout_alignEnd="@+id/txtApellidoFrmCrear"
        android:layout_alignLeft="@+id/txtApellidoFrmCrear"
        android:layout_alignStart="@+id/txtApellidoFrmCrear"
        android:singleLine="true"
        android:inputType="textPersonName"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/txtPasswordFrmCrear"
        android:layout_below="@+id/txtEspecialidadFrmCrear"
        android:layout_alignRight="@+id/txtEspecialidadFrmCrear"
        android:layout_alignEnd="@+id/txtEspecialidadFrmCrear"
        android:layout_alignLeft="@+id/txtEspecialidadFrmCrear"
        android:layout_alignStart="@+id/txtEspecialidadFrmCrear"
        android:maxLength="8"
        android:hint="Escriba su contraseña"
        android:textSize="13sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Contraseña"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/txtPasswordFrmCrear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#08918B"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Celular:"
        android:id="@+id/textView9"
        android:layout_below="@+id/txtPasswordFrmCrear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#08918B"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtCelularFrmCrear"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/txtPasswordFrmCrear"
        android:layout_alignStart="@+id/txtPasswordFrmCrear"
        android:layout_alignRight="@+id/txtPasswordFrmCrear"
        android:layout_alignEnd="@+id/txtPasswordFrmCrear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Correo:"
        android:id="@+id/textView10"
        android:layout_below="@+id/txtCelularFrmCrear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="#08918B" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtCorreoFrmCrear"
        android:layout_below="@+id/txtCelularFrmCrear"
        android:layout_alignLeft="@+id/txtCelularFrmCrear"
        android:layout_alignStart="@+id/txtCelularFrmCrear"
        android:layout_alignRight="@+id/txtCelularFrmCrear"
        android:layout_alignEnd="@+id/txtCelularFrmCrear" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtNombreFrmCrear"
        android:layout_above="@+id/txtApellidoFrmCrear"
        android:layout_alignLeft="@+id/txtApellidoFrmCrear"
        android:layout_alignStart="@+id/txtApellidoFrmCrear"
        android:layout_alignRight="@+id/txtApellidoFrmCrear"
        android:layout_alignEnd="@+id/txtApellidoFrmCrear" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BtnFormularioValidar"
        android:id="@+id/btnValidarFormCrear"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#55B3AF"
        android:textSize="25sp"
        android:gravity="center|center_vertical|center_horizontal"
        android:background="@drawable/buttonvalidarcrearcuenta"
        android:paddingLeft="0dp" />




</RelativeLayout>
