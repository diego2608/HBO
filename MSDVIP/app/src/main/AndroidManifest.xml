<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.consorciohbo.app.msdvip" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name=".permission.RECEIVE" />
    <uses-permission android:name="com.consorciohbo.hboreport.permission.C2D_MESSAGE" />
    <permission android:name="com.consorciohbo.hboreport.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UI.ControlsViews.FirstpageActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.ControlsViews.SingupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:theme="@style/AppTheme.NoActionBar" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.ControlsViews.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.ControlsViews.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.ControlsViews.PerfilpageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.ControlsViews.MensajeriaContactosActivity"
            android:label="@string/title_activity_list_mensajeria"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name=".UI.ControlsViews.SendmessageActivity" >
        </activity>
        <activity android:name=".EventosActivity" >
        </activity>
        <activity android:name=".UI.ControlsViews.CrearUserActivity" >
        </activity>
        <activity android:name=".UI.ControlsViews.MensajeriaMarketingActivity" >
        </activity>
        <activity android:name=".UI.ControlsViews.SitiosWebActivity" >
        </activity>
        <activity android:name=".UI.ControlsViews.MaterialesMedicosActivity" >
        </activity>

    </application>

</manifest>
